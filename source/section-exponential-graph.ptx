            <col width="6%" />
            <col halign="right" right="medium" width="5%" />
            <col width="6%" />
            <col halign="right" right="medium" width="5%" />
            <row left="medium" bottom="medium" halign="center">
                <cell><m>x</m></cell>
                <cell colspan="2"><m>0.25x</m></cell>
                <cell colspan="2"><m>2^{0.25x}</m></cell>
            </row>
            <row left="medium" bottom="medium">
                <cell><m>-16</m></cell>
                <cell></cell>
                <cell></cell>
                <cell></cell>
                <cell></cell>
            </row>
            <row left="medium" bottom="medium">
                <cell><m>-12</m></cell>
